#include <stdio.h>

int calculo_fatorial(int valor){

if(valor <= 1) 
	return(1);
else 
	return valor * calculo_fatorial(valor - 1);



}


int main(){
int num, resposta;
	printf("Digite um numero que ira ser calculado de forma fatorial: ");
	scanf("%i",&num);	
	
	resposta = calculo_fatorial(num);
	
	printf("Resposta FATORIAL: %i",resposta);
}
